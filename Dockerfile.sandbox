# VibeCode God Mode Sandbox
# This Dockerfile defines the "Full Power" environment for each user.

FROM node:20-slim

# Install system essentials
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    curl \
    git \
    jq \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub CLI
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && sudo chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && sudo apt update \
    && sudo apt install gh -y

# Set up a non-root user with sudo access (for the "God Mode" feel)
RUN useradd -m vibecode && echo "vibecode:vibecode" | chpasswd && adduser vibecode sudo
RUN echo "vibecode ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

USER vibecode
WORKDIR /home/vibecode

# Pre-initialize workspace
RUN mkdir -p /home/vibecode/project

CMD ["/bin/bash"]
