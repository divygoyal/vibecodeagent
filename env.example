# ============================================
# ClawBot Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============= GitHub OAuth =================
# Create at: https://github.com/settings/applications/new
GITHUB_ID=your_github_oauth_client_id
GITHUB_SECRET=your_github_oauth_client_secret

# ============= NextAuth.js ==================
# Random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_random_secret_here
NEXTAUTH_URL=https://your-domain.com

# ============= Admin API ====================
# Random key: openssl rand -hex 32
ADMIN_API_KEY=your_admin_api_key_here
ADMIN_API_URL=http://admin-api:8000

# ============= Gemini API ===================
# Get at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============= OpenClaw Image ===============
OPENCLAW_IMAGE=ghcr.io/openclaw/openclaw:latest

# ============= Alert Notifications ==========
# Your Telegram bot for receiving admin alerts
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token
TELEGRAM_ADMIN_CHAT_ID=your_telegram_chat_id

# ============= Watchdog Settings ============
HEALTH_CHECK_INTERVAL=60
MAX_RESTART_ATTEMPTS=3

# ============= Database =====================
# SQLite (default) - no change needed
# DATABASE_URL=sqlite+aiosqlite:///./data/admin.db

# For production with PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/clawbot
